							<version>3.18.1-GA</version>
							<scope>compile</scope>
						</dependency>
						<dependency>
							<groupId>siga</groupId>
							<artifactId>siga-ex</artifactId>
							<version>${revision}</version>
						</dependency>
					</dependencies>
				</plugin>
